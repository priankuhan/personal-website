  $("#lipped").popover({ title: "Lipped Flower", content: lipped, container: 'body', html:true, trigger: "hover" });
  $("#spiked").popover({ title: "Spiked Flower", content: spiked, container: 'body', html:true, trigger: "hover" });
  $("#clustered").popover({ title: "Clustered Flower", content: clustered, container: 'body', html:true, trigger: "hover" });
  $("#hooded").popover({ title: "Hooded Flower", content: hooded, container: 'body', html:true, trigger: "hover" });
  
  $("#fad").delay(200).animate({"opacity": "1"}, 700);

</script>